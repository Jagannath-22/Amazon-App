{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "host": "localhost",
      "port": 5005
    },
    "ui": {
      "enabled": true,
      "port": 4001
    },
    "logging": {
      "port": 4501
    },
    "eventarc": {
      "port": 9300
    },
    "tasks": {
      "port": 9500
    },
    "hub": {
      "port": 4401
    }
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
      
    }
  ]
}
